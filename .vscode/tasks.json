{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PyInstaller: Build",
      "type": "shell",
      "command": "pyinstaller",
      "args": ["main.spec"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "PyInstaller: Clean",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "build", "dist", "*.spec"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
